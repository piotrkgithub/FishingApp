<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_cv_main_marginStartEnd"
        android:layout_marginEnd="@dimen/item_cv_main_marginStartEnd"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/item_cv_corner_radius"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/item_content_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_marginStart"
                android:layout_marginEnd="@dimen/item_marginEnd"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitleEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/item_event_date_textSize"
                    android:textStyle="bold"
                    tools:text="Data" />

                <TextView
                    android:id="@+id/tvLocationEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/item_fish_description_text_color"
                    android:textSize="@dimen/item_event_description_textSize"
                    tools:text="Miejsce" />

                <TextView
                    android:id="@+id/tvTimeEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/item_fish_description_text_color"
                    android:textSize="@dimen/item_event_description_textSize"
                    tools:text="Opis" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>